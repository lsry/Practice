(define (average x y)
  (/ (+ x y) 2.0)
)
(define (abs x)
  (cond ((< x 0) (- 0 x))
    (else x)
  )
)
(define (square x)
  (* x x)
)
(define (goodenough x y)
  (< (abs (- (square x) y)) 0.001)
)

(define (sqrtiter guess x)
  (if (goodenough guess x) guess
    (sqrtiter (average guess (/ x guess)) x)
  )
)
(define (sqrt x)
   (sqrtiter 1.0 x)
)

